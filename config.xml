	id		= "com.alunny.amazing"
	version 	= "99.999">

	<name>Jani's and Konrad's Test Application</name>

	<description>
		Yikes, this is fancy stuff. We really like it and hope you do too!
	</description>

	<author href="https://github.com/randomm/phonegap-start"
		email="jani.turunen@hiit.fi">
		Jani Turunen
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
